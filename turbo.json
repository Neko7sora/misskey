{
	"$schema": "https://turbo.build/schema.json",
	"pipeline": {
		"build:main": {
			"inputs": [
				"packages/**"
			],
			"outputs": [
				"**/built/**"
			]
		},
		"build:post": {
			"inputs": [
				"scripts/build-post.js",
				"scripts/package.json",
				"**/built/**"
			],
			"outputs": [
				"**/built/**"
			]
		},
		"build:pre": {
			"inputs": [
				"scripts/build-pre.js",
				"scripts/package.json",
				"package.json"
			],
			"outputs": [
				"built/meta.json"
			]
		},
		"clean": {
			"inputs": [
				"**/built/**"
			],
			"outputs": [
				"**/built/**"
			]
		},
		"clean-all": {
			"dependsOn": [
				"clean"
			],
			"inputs": [
				"**/node_modules/**"
			],
			"outputs": [
				"**/node_modules/**"
			]
		},
		"cy:open": {
			"persistent": true
		},
		"cy:run": {},
		"dev:main": {
			"cache": false,
			"persistent": true
		},
		"dev:watch": {
			"cache": false,
			"persistent": true
		},
		"jest": {
			"inputs": [
				"packages/backend/**"
			]
		},
		"lint": {
			"dependsOn": [
				"lint:eslint",
				"lint:typecheck"
			]
		},
		"lint:eslint": {
			"inputs": [
				"packages/**"
			],
			"outputs": [
				"packages/**"
			]
		},
		"lint:typecheck": {
			"inputs": [
				"packages/**"
			],
			"outputs": [
				"packages/**"
			]
		},
		"migrate": {
			"cache": false
		},
		"start": {
			"cache": false,
			"env": [
				"NODE_ENV"
			]
		}
	}
}

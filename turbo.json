{
	"$schema": "https://turbo.build/schema.json",
	"pipeline": {
		"cy:open": {
			"persistent": true
		},
		"cy:run": {},
		"build:main": {
			"inputs": [
				"packages/**",
				"**/built/**"
			],
			"outputs": [
				"built/meta.json"
			]
		},
		"build:pre": {
			"inputs": [
				"scripts/build-pre.js"
			]
		},
		"build:post": {
			"inputs": [
				"scripts/build-post.js",
				"scripts/package.json",
				"**/built/**"
			],
			"outputs": [
				"**/built/**"
			]
		},
		"clean": {},
		"clean-all": {
			"dependsOn": [
				"clean"
			]
		},
		"lint": {
			"dependsOn": [
				"lint:eslint",
				"lint:typecheck"
			]
		},
		"lint:eslint": {},
		"lint:typecheck": {},
		"migrate":{},
		"start":{
			"env": ["NODE_ENV"]
		},
		"jest":{}
	}
}
